#!/usr/bin/env dot
digraph iterative_expt {
        node[fontname=monospace]
        edge[fontname=monospace]
        {
                node[shape=box]
                b
                n
                counter
                product
        }
        {
                node[shape=trapezium]
                times[label="*"]
                equals[label="="]
                minus[label="-"]
        }
        {
                node[shape=triangle]
                one[label=1]
                zero[label=0]
        }
        one -> product[label="product &larr; 1"]
        n -> counter[label="counter &larr; n"]
        counter -> equals
        zero -> equals
        counter -> minus
        one -> minus
        minus -> counter[label="counter &larr; -"]
        b -> times
        product -> times
        times -> product[label="product &larr; times"]
}
