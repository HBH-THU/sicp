#!/usr/bin/env dot
digraph data_paths {
        edge[fontname=monospace]
        node[fontname=monospace]
        {
                node[shape=box]
                product
                counter
                t
                u
                n
        }
        {
                node[shape=ellipse]
                greater_than[label=">"]
        }
        {
                node[shape=trapezium]
                times[label="*"]
                plus[label="+"]
        }
        {
                node[shape=triangle]
                product_1[label=1]
                counter_1[label=1]
                plus_1[label=1]
        }
        product_1 -> product[label="product &larr; 1"]
        counter_1 -> counter[label="counter &larr; 1"]
        counter -> greater_than
        n -> greater_than
        counter -> times
        product -> times
        times -> t
        t -> product[label="product &larr; t"]
        counter -> plus
        plus_1 -> plus
        plus -> u
        u -> counter[label="counter &larr; u"]
}
