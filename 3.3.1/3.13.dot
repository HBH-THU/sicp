#!/usr/bin/env neato
digraph cycle {
        graph[splines=true]
        {
                node[shape=plaintext]
                z
        }
        {
                node[shape=record]
                a[label="<0>a|<1>"]
                b[label="<0>b|<1>"]
                c[label="<0>c|<1>"]
        }
        z -> a:0
        a:1 -> b:0
        b:1 -> c:0
        c:1 -> a:0
}
